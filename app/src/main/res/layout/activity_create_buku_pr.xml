<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    tools:context=".CreateBukuPrActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_topbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0.5">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbBackCBP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/base_background"
                android:fontFamily="@font/varela"
                android:paddingLeft="0dp"
                android:text="BUKU PR"
                android:textColor="@color/grey_textview"
                android:textSize="26sp"
                app:icon="@drawable/ic_left"
                app:iconTint="@color/grey_textview"
                app:iconGravity="start"
                app:iconSize="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/cl_topbar"
                app:layout_constraintTop_toTopOf="@id/cl_topbar" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbDoneCBP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@color/base_background"
                android:fontFamily="@font/varela"
                android:paddingLeft="0dp"
                android:text="Done"
                android:textColor="@color/grey_textview_2"
                android:textSize="16sp"
                app:icon="@drawable/ic_done"
                app:iconTint="@color/grey_textview_2"
                app:iconGravity="textStart"
                app:iconSize="25dp"
                app:layout_constraintBottom_toBottomOf="@id/mbBackCBP"
                app:layout_constraintEnd_toEndOf="@id/cl_topbar"
                app:layout_constraintTop_toTopOf="@id/mbBackCBP" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9.5"
            android:background="@drawable/style_create_bukupr"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvCreateBukuPr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATE BUKU PR"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="@font/varela"
                android:gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/cl_main"
                app:layout_constraintEnd_toEndOf="@id/cl_main"
                app:layout_constraintTop_toTopOf="@id/cl_main"
                />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Name"
                android:textColor="@color/grey_textview_2"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/cl_main"
                app:layout_constraintTop_toBottomOf="@id/tvCreateBukuPr"
                />

            <EditText
                android:id="@+id/etNamaBukuPr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey_textview"
                android:hint="Insert buku pr name"
                android:textColor="@color/white"
                android:textColorHint="@color/grey_textview"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvName" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>